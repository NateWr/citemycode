{
  "name": "Cite My Code",
  "version": "1.1.0",
  "version_name": "Cite My Code 1.1.0",
  "manifest_version": 2,
  "description": "Get BibTeX citation to a GitHub project while browsing.",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Cite My Code",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/jquery-3.1.1.min.js", "citemycode.js"]
    }
  ],
  "web_accessible_resources": ["stylesheet.css"]
}
